{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run Mocha",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": ["--debug-brk", "-R", "spec"],
      "cwd": "${workspaceRoot}",
      "env": {
        "NODE_ENV": "development"
      },
      "protocol": "inspector",
      "runtimeExecutable": null,
      "stopOnEntry": false
    }
  ]
}
